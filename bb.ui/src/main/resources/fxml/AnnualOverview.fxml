<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/" fx:controller="timkodiert.budgetbook.view.AnnualOverviewView">
  <top>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
      <Label styleClass="text-bold" text="%menuItem.showAnnualOverview"/>
      <Button fx:id="prevYearBtn" mnemonicParsing="false" styleClass="button-icon" text="&lt;"/>
      <ComboBox fx:id="selectedYearBox" prefWidth="90.0"/>
      <Button fx:id="nextYearBtn" mnemonicParsing="false" styleClass="button-icon" text="&gt;"/>
      <BorderPane.margin>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </BorderPane.margin>
    </HBox>
  </top>
  <center>
    <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-border-color: -color-base-2; -fx-border-width: 1 0 0 0;">
      <VBox spacing="20">
        <TableView fx:id="topTable" minHeight="168.0" prefHeight="168.0" prefWidth="500.0">
          <columns>
            <TableColumn fx:id="topLabelColumn" minWidth="100.0" prefWidth="200.0" styleClass="annual-overview-tablecolumn"
                         text="%annualOverview.topTable.column.overview"/>
          </columns>
        </TableView>
        <TableView fx:id="mainTable" prefWidth="500.0" VBox.vgrow="ALWAYS">
          <columns>
            <TableColumn fx:id="mainTableLabelColumn" minWidth="100.0" prefWidth="200.0" styleClass="annual-overview-tablecolumn"
                         text="%annualOverview.mainTable.column.expenses"/>
          </columns>
        </TableView>
      </VBox>
    </ScrollPane>
    </center>
</BorderPane>
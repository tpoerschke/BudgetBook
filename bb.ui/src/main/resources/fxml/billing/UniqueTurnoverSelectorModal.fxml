<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <GridPane hgap="10.0" vgap="10.0">
                <VBox>
                    <Label text="%billingDV.modal.label.biller"/>
                    <TextField fx:id="filterBillerTextField"/>
                </VBox>
                <VBox GridPane.columnIndex="1">
                    <Label text="%billingDV.modal.label.date"/>
                    <DatePicker fx:id="filterDatePicker"/>
                </VBox>
                <Button fx:id="filterButton" mnemonicParsing="false" onAction="#applyFilter" text="%button.filter" GridPane.columnIndex="2" GridPane.valignment="BOTTOM"/>
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints minWidth="150" prefWidth="150"/>
                    <ColumnConstraints minWidth="100" prefWidth="100"/>
                </columnConstraints>
            </GridPane>
            <TableView fx:id="turnoverTable" prefHeight="400.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="billerColumn" editable="false" minWidth="-Infinity" prefWidth="300.0" sortable="false"
                                 text="%BillingDV.column.biller"/>
                    <TableColumn fx:id="dateColumn" editable="false" minWidth="-Infinity" prefWidth="150.0" sortable="false"
                                 text="%BillingDV.column.date"/>
                    <TableColumn fx:id="valueColumn" editable="false" minWidth="-Infinity" prefWidth="150.0" sortable="false"
                                 text="%BillingDV.column.totalValue"/>
                </columns>
            </TableView>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </center>
    <bottom>
        <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" text="%button.cancel"/>
                <Button fx:id="selectButton" alignment="CENTER" mnemonicParsing="false" onAction="#selectTurnover" text="%button.add"/>
            </buttons>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </ButtonBar>
    </bottom>
</BorderPane>

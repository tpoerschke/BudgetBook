<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="timkodiert.budgetbook.view.billing.BillingDetailView">
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <GridPane hgap="10.0" vgap="10.0">
                <VBox>
                    <Label text="%BillingDV.label.title"/>
                    <TextField fx:id="titleTextField"/>
                </VBox>
                <VBox GridPane.columnIndex="1" GridPane.rowSpan="2">
                    <Label text="%BillingDV.label.description"/>
                    <TextArea fx:id="descriptionTextArea"/>
                </VBox>
                <VBox GridPane.vgrow="ALWAYS" GridPane.rowIndex="1">
                    <TableView fx:id="turnoverTable" prefHeight="400.0">
                        <columns>
                            <TableColumn fx:id="billerColumn" editable="false" minWidth="-Infinity" prefWidth="300.0" sortable="false"
                                         text="%BillingDV.column.biller"/>
                            <TableColumn fx:id="dateColumn" editable="false" minWidth="-Infinity" prefWidth="150.0" sortable="false"
                                         text="%BillingDV.column.date"/>
                            <TableColumn fx:id="valueColumn" editable="false" minWidth="-Infinity" prefWidth="150.0" sortable="false"
                                         text="%BillingDV.column.totalValue"/>
                        </columns>
                    </TableView>
                    <TableView fx:id="totalTable" prefHeight="44.0">
                        <columns>
                            <TableColumn fx:id="totalBillerColumn" editable="false" minWidth="-Infinity" prefWidth="300.0" sortable="false"
                                         text="%BillingDV.column.biller"/>
                            <TableColumn fx:id="totalDateColumn" editable="false" minWidth="-Infinity" prefWidth="150.0" sortable="false"
                                         text="%BillingDV.column.date"/>
                            <TableColumn fx:id="totalValueColumn" editable="false" minWidth="-Infinity" prefWidth="150.0" sortable="false"
                                         text="%BillingDV.column.totalValue"/>
                        </columns>
                        <styleClass>
                            <String fx:value="noheader"/>
                        </styleClass>
                    </TableView>
                </VBox>
                <HBox spacing="10.0" GridPane.rowIndex="2">
                    <Button fx:id="addTurnoverButton" mnemonicParsing="false" onAction="#addTurnover" text="%button.add"/>
                    <Button fx:id="removeTurnoverButton" mnemonicParsing="false" onAction="#removeTurnover" text="%button.remove"/>
                </HBox>
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints minWidth="300" prefWidth="300"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </center>
    <bottom>
        <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="discardButton" mnemonicParsing="false" onAction="#discardChanges" text="%editExpense.button.cancel"/>
                <Button fx:id="saveButton" alignment="CENTER" mnemonicParsing="false" onAction="#save" text="%editExpense.button.save"/>
                <Button mnemonicParsing="false" onAction="#delete" styleClass="danger" text="%editExpense.button.delete"/>
            </buttons>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </ButtonBar>
    </bottom>
</BorderPane>

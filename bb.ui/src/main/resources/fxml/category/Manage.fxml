<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<SplitPane dividerPositions="0.5" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="timkodiert.budgetBook.view.category.ManageCategoriesView">
    <BorderPane>
        <center>
            <TreeTableView fx:id="categoriesTable" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="300.0" showRoot="false"
                           BorderPane.alignment="CENTER">
                <columns>
                    <TreeTableColumn fx:id="nameColumn" editable="false" minWidth="-Infinity" prefWidth="200.0" resizable="false" sortable="false"
                                     text="%manageCategories.column.name"/>
                    <TreeTableColumn fx:id="actionColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="98.0" resizable="false"
                                     sortable="false"/>
                </columns>
                <columnResizePolicy>
                    <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TreeTableView>
        </center>
    </BorderPane>
    <StackPane fx:id="detailViewContainer"/>
</SplitPane>

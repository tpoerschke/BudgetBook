<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<SplitPane dividerPositions="0.5" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="timkodiert.budgetbook.view.category.CategoriesManageView">
    <BorderPane>
        <top>
            <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label styleClass="text-bold" text="%manageCategories.label.manageCategories">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </Label>
                <Button mnemonicParsing="false" onAction="#openNewCategory" styleClass="small" text="%button.add"/>
            </HBox>
        </top>
        <center>
            <TableView fx:id="entityTable" BorderPane.alignment="CENTER">
                <columns>
                    <TableColumn fx:id="nameColumn" editable="false" minWidth="-Infinity" prefWidth="200.0" sortable="false"
                                 text="%manageCategories.column.name"/>
                    <TableColumn fx:id="groupColumn" editable="false" prefWidth="200.0" sortable="false" text="%manageCategories.column.group"/>
                </columns>
            </TableView>
        </center>
    </BorderPane>
    <StackPane fx:id="detailViewContainer"/>
</SplitPane>

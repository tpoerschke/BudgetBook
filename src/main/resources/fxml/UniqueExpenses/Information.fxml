                  <TextField fx:id="positionTextField" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Betrag" />
                  <HBox>
                     <children>
                        <TextField fx:id="valueTextField" prefWidth="150.0" styleClass="left-pill" />

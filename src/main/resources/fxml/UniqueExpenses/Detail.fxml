<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import timkodiert.budgetBook.ui.control.AutoCompleteTextField?>

<BorderPane fx:id="root" minHeight="-Infinity" minWidth="-Infinity" prefHeight="520.0"
   prefWidth="700.0" stylesheets="@../../css/general-styles.css" xmlns="http://javafx.com/javafx/18"
   xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE"
         BorderPane.alignment="CENTER">
         <tabs>
            <Tab text="Informationen">
               <content>
                  <GridPane hgap="20.0" maxHeight="400.0" vgap="20.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="60.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="-Infinity" prefHeight="50.0" />
                        <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                     </rowConstraints>
                     <children>
                        <VBox>
                           <children>
                              <Label text="Rechnungssteller" />
                              <AutoCompleteTextField fx:id="billerTextField"
                                 maxWidth="1.7976931348623157E308" minWidth="-Infinity" />
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="1">
                           <children>
                              <Label text="Bemerkung" />
                              <TextArea fx:id="noteTextArea" maxHeight="-Infinity"
                                 maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                                 prefHeight="200.0" />
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
                           <children>
                              <Label text="Datum" />
                              <DatePicker fx:id="datePicker" maxWidth="1.7976931348623157E308" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </GridPane>
               </content>
            </Tab>
            <Tab text="Positionen">
               <content>
                  <HBox>
                     <children>
                        <TableView fx:id="expenseInfoTable" HBox.hgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="expenseInfoPositionCol"
                                 maxWidth="1.7976931348623157E308" prefWidth="200.0" text="Position" />
                              <TableColumn fx:id="expenseInfoValueCol"
                                 maxWidth="1.7976931348623157E308" prefWidth="100.0" text="Betrag" />
                              <TableColumn fx:id="expenseInfoCategoriesCol"
                                 maxWidth="1.7976931348623157E308" prefWidth="250.0"
                                 text="Kategorien" />
                           </columns>
                        </TableView>
                        <VBox spacing="10.0">
                           <children>
                              <Button fx:id="addUniqueExpenseInformationButton"
                                 maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                 onAction="#newUniqueExpenseInformation" text="Hinzufügen" />
                              <Button fx:id="editUniqueExpenseInformationButton"
                                 maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                 onAction="#editUniqueExpenseInformation" text="Bearbeiten" />
                              <Button fx:id="deleteUniqueExpenseInformationButton"
                                 maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                 onAction="#deleteUniqueExpenseInformation" text="Löschen" />
                           </children>
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </VBox>
                     </children>
                  </HBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <buttons>
            <Button mnemonicParsing="false" onAction="#discardChanges" text="Verwerfen" />
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#save" text="Speichern" />
            <Button mnemonicParsing="false" onAction="#delete" styleClass="danger" text="Löschen" />
         </buttons>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </ButtonBar>
   </bottom>
</BorderPane>
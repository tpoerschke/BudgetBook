        </columns>
         <styleClass>
            <String fx:value="noheader" />
            <String fx:value="monthly-table" />
         </styleClass>
      </TableView>
   </bottom>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="text-bold" text="Monatsansicht" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="timkodiert.budgetBook.view.MonthlyOverview">
   <center>
      <TableView fx:id="dataTable" editable="true" maxHeight="1.7976931348623157E308"
         maxWidth="1.7976931348623157E308" styleClass="monthly-table" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="buttonCol" editable="false" maxWidth="-Infinity" minWidth="55.0"
               prefWidth="55.0" resizable="false" sortable="false" />
            <TableColumn fx:id="positionCol" maxWidth="1.7976931348623157E308" minWidth="-1.0"
               prefWidth="300.0" text="%monthlyOverview.dataTable.column.position" />
            <TableColumn fx:id="valueCol" maxWidth="1.7976931348623157E308" minWidth="-1.0"
               prefWidth="120.0" styleClass="value-col, border-right" text="%monthlyOverview.dataTable.column.amount" />
            <TableColumn fx:id="dateCol" maxWidth="1.7976931348623157E308" minWidth="90.0"
               prefWidth="-1.0" styleClass="border-right" text="%monthlyOverview.dataTable.column.date" />
            <TableColumn fx:id="categoriesCol" maxWidth="1.7976931348623157E308" minWidth="200.0"
               prefWidth="-1.0" text="%monthlyOverview.dataTable.column.categories" />
         </columns>
      </TableView>
   </center>
   <bottom>
      <TableView fx:id="sumTable" prefHeight="42.0" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="sumTableCol0" prefWidth="75.0" text="%monthlyOverview.sumTable.column.columnX" />
            <TableColumn fx:id="sumTableCol1" maxWidth="1.7976931348623157E308" minWidth="-1.0"
               prefWidth="-1.0" text="%monthlyOverview.sumTable.column.c1" />
            <TableColumn fx:id="sumTableCol2" maxWidth="1.7976931348623157E308" minWidth="-1.0"
               prefWidth="-1.0" styleClass="value-col" text="%monthlyOverview.sumTable.column.c2" />
         </columns>
         <styleClass>
            <String fx:value="noheader" />
            <String fx:value="monthly-table" />
         </styleClass>
      </TableView>
   </bottom>
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="text-bold" text="%monthlyOverview.label.monthlyView">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <GridPane>
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Button fx:id="prevMonthBtn" mnemonicParsing="false"
                           styleClass="button-icon" text="&lt;" />
                        <ComboBox fx:id="selectedMonthBox" prefWidth="120.0" />
                        <ComboBox fx:id="selectedYearBox" prefWidth="90.0" />
                        <Button fx:id="nextMonthBtn" mnemonicParsing="false"
                           styleClass="button-icon" text="&gt;" />
                        <!-- <CheckBox mnemonicParsing="false" text="Unterpositionen anzeigen" /> -->
                     </children>
                  </HBox>
               </children>
            </GridPane>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </top>
</BorderPane>
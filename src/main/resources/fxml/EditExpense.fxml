                        </TableView>
                        <VBox spacing="10.0">
                           <children>
                              <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Hinzufügen" />
                              <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Bearbeiten" />
                              <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Löschen" />
                           </children>
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </VBox>
                     </children>
                  </HBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>

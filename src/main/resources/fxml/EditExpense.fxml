                  <GridPane hgap="20.0" maxHeight="400.0" vgap="20.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="60.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="-Infinity" prefHeight="50.0" />
                        <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                     </rowConstraints>
                     <children>
                        <VBox>
                           <children>
                              <Label text="Position" />
                              <TextField fx:id="positionTextField" maxWidth="1.7976931348623157E308" minWidth="-Infinity" />
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="1">
                           <children>
                              <Label text="Bemerkung" />
                              <TextArea fx:id="noteTextArea" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="200.0" />
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowSpan="2147483647">
                           <children>
                              <Label text="Kategorien" />
                              <TreeView fx:id="categoriesTreeView" showRoot="false" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </GridPane>
               </content>
            </Tab>
            <Tab text="Zahlungen">
               <content>
                  <HBox>
                     <children>
                        <TableView fx:id="expenseInfoTable" HBox.hgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="expenseInfoValueCol" minWidth="100.0" prefWidth="100.0" text="Betrag" />
                            <TableColumn fx:id="expenseInfoTypeCol" minWidth="120.0" prefWidth="120.0" text="Art" />
                              <TableColumn fx:id="expenseInfoStartCol" minWidth="100.0" prefWidth="100.0" text="Von" />
                              <TableColumn fx:id="expenseInfoEndCol" minWidth="100.0" prefWidth="100.0" text="Bis" />

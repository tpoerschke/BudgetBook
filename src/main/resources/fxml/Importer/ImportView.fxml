<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane fx:id="root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="timkodiert.budgetBook.view.ImportView">
    <BorderPane>
        <top>
            <Label text="Umsätze importieren" BorderPane.alignment="CENTER_LEFT" styleClass="text-bold">
                <BorderPane.margin>
                    <Insets bottom="10.0"/>
                </BorderPane.margin>
            </Label>
        </top>
        <center>
            <VBox spacing="10.0" BorderPane.alignment="CENTER">
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Button mnemonicParsing="false" text="Datei auswählen" onAction="#onSelectFile"/>
                    <Label fx:id="filePathLabel"/>
                </HBox>
                <TableView fx:id="importTable" editable="true" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="selectedCol" prefWidth="80.0"/>
                        <TableColumn fx:id="dateCol" prefWidth="100.0" text="Valuta"/>
                        <TableColumn fx:id="receiverCol" prefWidth="250.0" text="Empfänger"/>
                        <TableColumn fx:id="postingTextCol" prefWidth="180.0" text="Buchungstext"/>
                        <TableColumn fx:id="referenceCol" prefWidth="350.0" text="Verwendungszweck"/>
                        <TableColumn fx:id="amountCol" prefWidth="100.0" text="Betrag"/>
                        <TableColumn fx:id="associatedCol" prefWidth="160.0" text="Regelmäßige Ausgabe"/>
                        <TableColumn fx:id="annotationCol" prefWidth="220.0" text="Anmerkung"/>
                    </columns>
                </TableView>
                <HBox>
                    <Button text="Ausgewählte Importieren" onAction="#importSelected"/>
                </HBox>
            </VBox>
        </center>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </BorderPane>
</StackPane>
